<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearlayout_question1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- QUESTION 1 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="15dp"
            android:background="@drawable/cashews" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Q1 - ANSWER 1 -->
            <Button
                android:id="@+id/button_question1_answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="questionOneAnswer1"
                android:text="@string/q1a1" />
            <!-- Q1 - ANSWER 2 -->
            <Button
                android:id="@+id/button_question1_answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="questionOneAnswer2"
                android:text="@string/q1a2" />
            <!-- Q1 - ANSWER 3 -->
            <Button
                android:id="@+id/button_question1_answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="questionOneAnswer3"
                android:text="@string/q1a3" />
            <!-- Q1 - ANSWER 4 -->
            <Button
                android:id="@+id/button_question1_answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="questionOneAnswer4"
                android:text="@string/q1a4" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>